<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_margin="6dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_star"
        app:civ_circle_background_color="#FFCC33"
        android:id="@+id/pic_icon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@+id/pic_icon"
        android:text="Featured article"
        android:textColor="#000"
        android:id="@+id/texdt_desc"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"

        android:layout_marginLeft="9dp"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="18-jul-2018"
        android:drawableRight="@drawable/ic_three_dots_black"
        android:layout_alignParentTop="true"
        android:drawablePadding="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical|left"


        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/mndla"
            android:layout_below="@+id/texdt_desc"
            android:id="@+id/image_one_central"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nelson Mandela"
            android:textColor="#000"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/image_one_central"
            android:textSize="25sp"
            android:id="@+id/text_one_one"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="President of South Africa , anti aparthied activist."
            android:textColor="#818181"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/text_one_one"
            android:id="@+id/text_one_two"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nelson"
            android:textColor="#000"
            android:lineSpacingExtra="1.1dp"
            android:lineSpacingMultiplier="1.1"
            android:textSize="18sp"
            android:layout_below="@+id/text_one_two"
            android:id="@+id/text_one_three"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:drawableLeft="@drawable/ic_hollow_save"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_share"

            android:gravity="center_vertical|left"
            android:layout_below="@+id/text_one_three"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginLeft="10dp"
            android:textColor="#72777D"
            android:textSize="17sp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>