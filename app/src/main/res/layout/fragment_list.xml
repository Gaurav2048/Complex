<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.saurav.complex.WikiPedia.fragments.ListFragment">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:fitsSystemWindows="true"
            android:background="@color/colorPrimaryWikipedia"
            app:contentScrim="@color/colorPrimaryWikipedia"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar156"
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryWikipedia"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My List"
    android:gravity="center_vertical|left"
    android:layout_marginLeft="10dp"
    android:textSize="14sp"
    android:textColor="#fff"
    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#54595D"
    android:layout_marginTop="56dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync reading lists"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_marginBottom="22dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/large_text_view"
        android:textColor="#fff"
        android:lineSpacingExtra="1.2dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="18dp"
        android:textSize="14sp"
        android:gravity="left"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="20dp"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="GOT IT"
            android:textColor="#fff"
            android:textSize="16sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryWikipedia"
            android:background="#fff"
            android:layout_gravity="center_vertical"
            android:text="LOG IN"
            android:textSize="16sp"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_bookmark_dark"
            android:background="#EAECF0"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Saved"
        android:drawableRight="@drawable/ic_three_dots_black"
        android:textSize="16sp"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="0 articles, 0.00MB"
        android:textColor="#5c5c5c"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="Default list for your saved articles"
        android:textColor="#5c5c5c"

        />
</LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/history_one"
        android:scaleType="fitXY"
        />
</LinearLayout>

</android.support.design.widget.CoordinatorLayout>
